<%= form_for ([@category, @post]) do |f| %>
  <%= hidden_field(:post, :category_id, value: @category.id) %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
   <p>
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
   <p>
    <%= f.submit %>
  </p>
<% end %>